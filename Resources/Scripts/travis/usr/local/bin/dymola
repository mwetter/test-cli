#!/bin/bash
docker run \
	  --mac-address=${MAC_ADDRESS} \
	  --detach=false \
	  --rm \
	  --user=developer \
	  -v `pwd`:/mnt/shared \
	  ${DOCKER_USERNAME}/travis_ubuntu-1604_dymola-2017fd01-x86-64 /bin/bash -c \
	  "Xvfb :77  -extension RANDR & \
	  export DISPLAY=:77.0 && \
	  cd /mnt/shared && \
	  dymola runAll.mos /nowindow"